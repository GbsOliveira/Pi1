CREATE TABLE Cliente (
    ID INT AUTO_INCREMENT PRIMARY KEY,
    Nome VARCHAR(100),
    Endereco VARCHAR(255),
    Telefone VARCHAR(20),
    Email VARCHAR(100)
);

CREATE TABLE Membro (
    ID INT AUTO_INCREMENT PRIMARY KEY,
    Cliente_ID INT,
    FOREIGN KEY (Cliente_ID) REFERENCES Cliente(ID),
    Data_Inscricao DATE,
    Tipo_Plano VARCHAR(50),
    Data_Expiracao DATE,
    Estado_Pagamento ENUM('pago', 'atrasado', 'pendente')
);

CREATE TABLE Pagamento (
    ID INT AUTO_INCREMENT PRIMARY KEY,
    Membro_ID INT,
    FOREIGN KEY (Membro_ID) REFERENCES Membro(ID),
    Data_Pagamento DATE,
    Valor DECIMAL(10, 2),
    Metodo_Pagamento VARCHAR(50)
);

